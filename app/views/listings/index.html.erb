<div class="jumbotron">
<div class="white"> 
<h1>The Global Traders' Meeting Point</h1>
<h2>Whatever you want, When you want it</h2>
</div>
</div>


<div class="center">
 <div class="row">
 <% @listings.each do |listing| %>
 <div class="col-md-3">
   <div class="thumbnail">
    <%= link_to image_tag(listing.image.url), listing %>
     
        <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%= "Sold by #{listing.user.name}" %></p>
        
        
        
      </div>
  </div>


</div>
<% end %>
</div>
</div>

<br>
<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
