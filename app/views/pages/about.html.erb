<h3>Welcome to Sentams</h3>
<p>Sentams is a marketplace where people around the globe connect, both online and offline, to make, sell and buy  goods and Services.<p>

<div class="jumbotron">
<div class="white"> 
<h1>Sentams</h1>
<h2>Sign Up For Free, and Start Posting Your Ads</h2>
<%= search_form_for @search do |f| %>
     
     <div class="form-group">

      <div class="col-md-10">
      <% f.label :name_cont, "Name Contains" %>
     <%= f.text_field :name_cont, class: "form-control", autofocus: true, placeholder: 'What are You Shopping ?' %>
        </div>
        <div class="col-md-2">
      <%= f.submit "Search", class: "form-control" %>
        </div>

      </div>
       
  
 
      <% end %>

</div>
</div>



<!-- <div class="center">-->
 <div class="row pinterest-grid">
 <% @listings[0,10].each do |listing| %>
 
 <div class="col-xs-6 col-md-3 pin-item">
   <div class="thumbnail nna">
    <%= link_to image_tag(listing.image.url), listing %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><strong><%= number_to_currency(listing.price) %></strong></p>
        <p><strong><%= link_to "Sold by #{listing.user.name}", user_path(listing.user.name) %></strong></p>
        <h3><%= "Posted: #{listing.created_at.strftime("%b:%d:%Y")}" %><%= " at #{listing.created_at.strftime("%H:%M")}" %> <h3>
        
        
        
      </div>
     
        
  </div>



</div>
<% end %>
</div>
