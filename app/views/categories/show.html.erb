
<div class="center">

  <div class="col-md-3">

   <ul class="list-group">
    <% @categories.each do |category| %>
      
        <li class="list-group-item"><%= link_to category.name, category %></li>
        <% link_to 'Show', category %>
        <% link_to 'Edit', edit_category_path(category) %>
        <% link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
      
    <% end %>
  </ul>
</div>


<div class="col-md-9">











	<h1><%= @category.name %></h1>
 <div class="row pinterest-grid">
 <% if @listings.each do |listing| %>
 <div class="col-md-3 pin-item">
   <div class="thumbnail nn">
    <%= link_to image_tag(listing.image.url), listing %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><strong><%= number_to_currency(listing.price) %></strong></p>
        <p><strong><%= "Sold by #{listing.user.name}" %></strong></p>
        
        
        
      </div>
     
        
  </div>



</div>
<% end.empty? %>
<p>Sorry, There are No Listings In This Category</p>


<% end %>
</div>
</div>
</div>
<% link_to 'Edit', edit_category_path(@category) %> 
<% link_to 'Back', categories_path %>

